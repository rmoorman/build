<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

    <div metal:fill-slot="main">

        <div class="contentHeader">
      	<h1 tal:content="here/title_or_id">Title or id</h1>
        </div>
        
        <p tal:content="here/Description">
            Description
        </p>
        
        <p tal:condition="here/event_url|nothing">
        <span i18n:translate="event_for_more_info_go_to">For more information, visit</span>
        
        <br />
        
        <a href="event_url"
           tal:attributes="href here/event_url"
           tal:content="here/event_url">event_url</a>
        </p>

        <div class="group">
            <span class="legend" i18n:translate="legend_event_details">Event Details</span>

            <div class="row">
                <div class="label" i18n:translate="event_what">What</div>
                <div class="field">
                    <span tal:content="python:modules['string'].join(here.Subject(), ' ')"></span>
                </div>
            </div>

            <div class="row">
                <div class="label" i18n:translate="event_when">When</div>
                <div class="field">
                    <span i18n:translate="event_between">Between</span>
                    <span tal:replace="python:here.toPortalTime(here.start(), long_format=1)">Start Date Time</span>
                    <span i18n:translate="event_and">and</span>
                    <span tal:replace="python:here.toPortalTime(here.end(), long_format=1)">End Date Time</span>
                </div>
            </div>

            <div class="row">
                <div class="label" i18n:translate="event_where">Where</div>
                <div class="field">
                    <span tal:replace="here/location">location</span>
                </div>
            </div>
            
        </div>    

        <div class="group">
            <span class="legend" i18n:translate="legend_contact_details">Contact details</span>

            <div class="row">
                <div class="label" i18n:translate="contact_name">Name</div>
                <div class="field" tal:content="here/contact_name">contact_name</div>
            </div>
        
            <div class="row">
                <div class="label" i18n:translate="contact_email">Contact Email</div>
                <div class="field" tal:condition="here/contact_email">
                    <a tal:attributes="href python:'mailto:' + here.contact_email"
                    tal:content="here/contact_email"
                    href="mailto:contact_email">contact_email</a>
                </div>
            </div>

            <div class="row">
                <div class="label" i18n:translate="contact_phone">Contact Phone</div>
                <div class="field" 
                      tal:content="here/contact_phone">contact_phone</div>
            </div>
            
        </div>
        
	</div>
    </body>
    </html>
