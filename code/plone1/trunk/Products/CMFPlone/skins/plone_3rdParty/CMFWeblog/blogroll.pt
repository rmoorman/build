<div metal:define-macro="blogroll"  id="blogroll"
    tal:define="ids python:here.objectIds();
    blogLinks python:here.portal_catalog(id=ids,Type='Link',sort_on='Subject');
    global linkSubject nothing">

    <div tal:repeat="link blogLinks" tal:omit-tag="">

        <h2 tal:condition="python:len(link.Subject) and (not linkSubject in link.Subject)" tal:content="python:link.Subject[0]">
            Subject
        </h2>

        <a tal:attributes="href link/remote_url" tal:content="link/Title"
           tal:define="global linkSubject python:len(link.Subject) and link.Subject[0] or linkSubject">
            Link
        </a>

    </div>

</div>







