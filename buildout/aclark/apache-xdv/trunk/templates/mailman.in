<VirtualHost *:${ports:production}>
    ServerAdmin aclark@aclark.net
    DocumentRoot /var/www
    ServerName lists.aclark.net
    ErrorLog /srv/apache/var/log/lists.aclark.net-error.log
    CustomLog /srv/apache/var/log/lists.aclark.net-access.log combined
    ScriptAlias /cgi-bin/mailman/ /usr/lib/cgi-bin/mailman/
    Alias /pipermail/ /var/lib/mailman/archives/public/
    <Directory "/usr/lib/cgi-bin/mailman">
        AllowOverride None
        Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order allow,deny
        Allow from all
    </Directory>
    RedirectMatch ^[/]*$ http://lists.aclark.net/cgi-bin/mailman/listinfo
    RedirectMatch ^[/mailman/listinfo/info]*$ http://lists.aclark.net/cgi-bin/mailman/listinfo/info
</VirtualHost>
