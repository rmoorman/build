<html metal:use-macro="here/main_template/macros/master">

<metal:block fill-slot="base">
 <base tal:attributes="href string:${here/aq_parent/absolute_url}/weblog/" />
</metal:block>

<div metal:fill-slot="main"
     tal:define="t_s options/t_s | traverse_subpath;
                 global blogdata blogdata|python:here.portal_weblog.getMonthData(here.aq_parent,t_s);
                 global postdate postdate|string:0">

    <div id="blogs" tal:condition="blogdata">
        <div class="blogPost">
            <a id="" tal:attributes="id here/id">&nbsp;</a>
            <h1 class="postTitle" tal:condition="exists:here/Title"
                tal:content="here/Title">Blog Entry Title
            </h1>

            <p tal:content="structure here/CookedBody">
            Posting text
            </p>

            <a tal:define="permaLink python:here.portal_weblog.makePermaLink(here)"
                tal:condition="permaLink"
                tal:attributes="href permaLink;
                title string:Permament Link;">Permanent link to this</a>

                <strong tal:content="python:here.created().aCommon()">July 11th 2002 11:54 PM</strong>

                <div class="Discussion">
                    <span tal:replace="structure here/viewThreadsAtBottom"
                        tal:condition="here/viewThreadsAtBottom|nothing">
                    </span>
                </div>
        </div>
    </div>
</div>

</html>
