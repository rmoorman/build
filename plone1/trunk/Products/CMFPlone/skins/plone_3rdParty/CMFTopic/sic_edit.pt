<div class="row"
     metal:define-macro="sic_edit"
     tal:define="criterionid criterion/getId | here/getId;"
           i18n:domain="plone"
>

    <div class="label">
        <input class="noborder"
               type="checkbox" 
               value="" 
               name="criterion_ids:list" 
               id=""
               tal:attributes="value criterionid;
                               id string:cb_${criterionid};" 
               />
        
        <label for=""
               tal:attributes="for string:cb_${criterionid};">
            <span tal:content="criterion/Field | here/Field">Field</span>
            is
        </label>
        
        <div id="" 
             i18n:translate=""
             class="help" 
             style="visibility:hidden"
             tal:content="criterion/Description | here/Description;"
             tal:attributes="id string:${criterionid}_help;"
             >
        Integer
        </div>

        <input type="hidden" 
               name="criteria.id:records" 
               value=""
               tal:attributes="value criterionid" 
               />
        

    </div>
    
    <div class="field">       

        <select name=""
                tal:define="cdirection criterion/direction | here/direction;"
                tal:attributes="name string:criteria.direction__${criterionid}:records;
                                onfocus string:formtooltip('${criterionid}_help',1);
                                onblur  string:formtooltip('${criterionid}_help',0);
                                tabindex tabindex/next|nothing;"
                >
                
            <option value="min"
                    tal:attributes="selected python:cdirection=='min'"
            >more than</option>
            
            <option value="max"
                    tal:attributes="selected python:cdirection=='max'"
            >less than</option>
             
            <option value="min:max"
                    tal:attributes="selected python:cdirection=='min:max'"
            >within</option>
        </select>


        <input type="text" 
               name="criteria.value:records" 
               value="" 
               size="20"
               tal:define="cvalue criterion/getValueString | here/getValueString;"
               tal:attributes="value cvalue; 
                               onfocus string:formtooltip('${criterionid}_help',1);
                               onblur  string:formtooltip('${criterionid}_help',0);
                               tabindex tabindex/next|nothing;"
               />
     </div>
     
</div>       
